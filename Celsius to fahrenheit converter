//Conversion- Program to convert C -> F
//F = C * (212 - 32)/100 +32

#include <cstdio>
#include <cstdlib>
#include <iostream>

using namespace std;

int main(int nNumberofArgs, char * pszArgs[]) {
    //Enter the temp in C
    int celsius;
    cout << "Enter the temperature in Celsius: ";
    cin >> celsius;
    
    //Do the math
    int fahrenheit;
    fahrenheit = celsius * 9/5 + 32;
    
    //Output
    cout << "Fahrenheit value is: ";
    cout << fahrenheit << endl;
    
    //Wait...
    cout << "Press 'Enter' to continue... " << endl;
    cin.ignore(10, '\n');
    cin.get();
    return 0;
}
